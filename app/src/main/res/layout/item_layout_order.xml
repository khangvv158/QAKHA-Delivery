<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_10"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewShipping"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/delivery_illustration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="85:97"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508"
            app:layout_constraintWidth_percent="0.2"
            app:shapeAppearanceOverlay="@style/cornerImageView10percent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_4"
            android:background="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView10"
            app:layout_constraintDimensionRatio="8:14"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView10"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView10"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.015"
            app:shapeAppearanceOverlay="@style/cornerImageView10percent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/namePartnerHighTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_20"
            android:ellipsize="end"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/sf_compact_display_medium"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="234:24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewShipping"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.242"
            app:layout_constraintWidth_percent="0.55" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAddressPartner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/sf_compact_display_medium"
            android:gravity="center|left"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="2"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/namePartnerHighTextView"
            app:layout_constraintTop_toBottomOf="@+id/namePartnerHighTextView"
            app:layout_constraintWidth_percent="0.55" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center|left"
            android:textSize="@dimen/sp_12"
            app:layout_constraintDimensionRatio="60:12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewShipping"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddressPartner"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/title_food"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.045"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_display_medium"
            android:gravity="center|left"
            android:text="@string/label_currency"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/textViewPrice"
            app:layout_constraintStart_toEndOf="@+id/textViewPrice"
            app:layout_constraintTop_toTopOf="@+id/textViewPrice" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewIdOrder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center|left"
            android:textColor="@color/colorGrayChateau"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView14"
            app:layout_constraintDimensionRatio="100:16"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView14"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView14"
            app:layout_constraintWidth_percent="0.34" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|right"
            android:text="@string/detail"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="54:15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96"
            app:layout_constraintWidth_percent="0.14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="70:15"
            app:layout_constraintEnd_toEndOf="@+id/imageViewShipping"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/imageViewShipping"
            app:layout_constraintTop_toBottomOf="@+id/imageViewShipping"
            app:layout_constraintVertical_bias="0.948"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintWidth_percent="0.2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
